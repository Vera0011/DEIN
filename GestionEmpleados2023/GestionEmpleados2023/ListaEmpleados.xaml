<Window x:Class="GestionEmpleados2023.ListaEmpleados"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GestionEmpleados2023"
        mc:Ignorable="d"
        Title="ListaEmpleados" Height="450" Width="800" Closing="OnWindowClosing">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Label Grid.Row="0" Content="Listado de Empleados" FontSize="20" HorizontalContentAlignment="Center"/>

        <DataGrid Grid.Row="1" x:Name="dataGrid" AutoGenerateColumns="True" ColumnWidth="*"/>
    </Grid>
</Window>
