<UserControl x:Class="EasyBase.src.ui.components.Wrap_Databases_Main"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:EasyBase.src.ui.components"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Border BorderThickness="1" BorderBrush="#FFC971">
            <DockPanel Width="80" Height="80">
                <Label Width="auto" Height="60" DockPanel.Dock="Top" BorderBrush="#FFC971" BorderThickness="0, 0, 0, 1" Padding="5">
                    <Label.Background>
                        <ImageBrush AlignmentX="Center" AlignmentY="Top" ImageSource="{Binding Image, ElementName=root}" x:Name="Image_Item"/>
                    </Label.Background>
                </Label>
                <TextBox Foreground="#CC5803" DockPanel.Dock="Bottom" Width="auto" HorizontalContentAlignment="Center" BorderThickness="0" Text="{Binding Text}" x:Name="Text_Item"/>
            </DockPanel>
        </Border>
    </Grid>
</UserControl>
